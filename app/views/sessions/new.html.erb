<h1 class="h3 mt-5 mb-3 fw-normal">Please login</h1>

<%= form_tag '/login' do %>
  <% if flash.now[:alert] %>
    <div class="alert alert-danger" role="alert">
      <%= flash.now[:alert] %>
    </div>
  <% end %>
  <div class="mb-3">
    <%= label_tag :email, "Email", class: "form-label mb-1" %>
    <%= text_field_tag :email, nil, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= label_tag :password, "Password", class: "form-label mb-1" %>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>
  <%= submit_tag "Submit", class: "btn btn-primary btn-lg" %>

<% end %>
